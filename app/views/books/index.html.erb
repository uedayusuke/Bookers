<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<%= @books.each do |book| %>
			<tr>
				<td>
					<%= book.title %>
				</td>
				<td>
					<%= book.body %>
				</td>
				<td>
					<%= link_to "show", book_path(book.id) %>
					<%= link_to "edit", edit_book_path(book.id) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
